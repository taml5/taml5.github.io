---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Dexter Tam">
	<main>
		<div id="title">
			<code>dexter.tam [at] mail.utoronto.ca</code>
			<h1>Dexter Tam Long Hang</h1>
		</div>
		<div id="media">
			<a href="https://github.com/taml5" target="_blank" class="social">
				<img src="./github-outline.svg"/>
			</a>
			<a href="https://www.linkedin.com/in/dexter-tam/" target="_blank" class="social">
				<img src="./linkedin-outline.svg"/>
			</a>
		</div>
		<div id="blurb">
			<img src="./f3.jpg">
			<div>
				<p>
					I'm a rising third year undergraduate in the University of Toronto, specialising in Computer Science with a minor in Philosophy.
				</p>
				<p>
					Recently, I've been exploring web development, computer graphics, and machine learning. I'd like to In my free time, I like to play the classical guitar and some video games.
				</p>
			</div>
		</div>
		<div id="projects">
			<hr>
			<ul>
				<Card
					href="https://github.com/taml5/mnist"
					title="MNIST Neural Network"
					body="A graphical interface to interact with a feedforward neural network recognising handwritten digits from the MNIST dataset."
					img="./mnist.png"
					tech="Python, numpy, ReactJS"
				/>
				<Card
					href="https://github.com/taml5/engine"
					title="2.5D Raycaster Engine"
					body="A 2.5D graphics engine in the style of Doom, with lighting, texture mapping, and 1-bit styling."
					img="./graphics.png"
					tech="C, GLFW"
				/>
				<Card
					href="https://github.com/taml5/rss-reader"
					title="RSS Subscription Manager"
					body="An RSS reader built using Python and SQLite for the backend and ReactJS (Typescript, SCSS) for the frontend."
					img="./rss.png"
					tech="Python, SQLite, ReactJS"
				/>
				<Card
					href="https://github.com/Accusamus2065/Easy-Healthcare"
					title="AI Healthcare Chatbot"
					body="Chatbot aimed to connect patients to doctors through a simple preliminary diagnosis using AI. The final group project for CSC207 at UofT."
					img="./benson.png"
					tech="Java, DialogFlow, MongoDB"
				/>
			</ul>
		</div>
		<div id="colophon">
			<p>
				Updated Aug 2024
			</p>
		</div>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		max-width: 768px;
		margin: 0 auto;
		padding: 2rem;
	}

	#title {
		align-items: center;
		display: flex;
		flex-direction: column-reverse;
		text-align: center;

		code {
			font-size:x-small;
		}

		h1 {
			font-size: xx-large;
			margin-bottom: 0.5rem;
		}
	}

	#media {
		display: flex;
		flex-direction: row;
		gap: 1rem;
		justify-content: center;

		.social img {
			max-width: 2rem;
		}
	}

	#blurb {
		font-size: x-small;
		text-align: center;

		img {
			max-width: 50%;
			border-radius: 50%;
		}
	}

	#projects > ul {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}

	#colophon {
		font-size: xx-small;
		opacity: 20%;
		text-align: center;
	}

	@media only screen and (min-width: 768px) {
		#title {
			align-items: flex-start;
			display: flex;
			flex-direction: column;

			code {
				font-size: medium;
			}

			h1 {
				font-size: 60px;
				margin-block: 0.5rem 0;
			}
		}

		#media {
			display: flex;
			flex-direction: row;
			gap: 0.5rem;
			justify-content: flex-start;
		}

		#blurb {
			align-items: center;
			display: flex;
			font-size: medium;
			gap: 2rem;
			text-align: right;

			img {
				padding: 1rem;
				max-width: 25%;
				border-radius: 50%;
			}
		}
	}
</style>
