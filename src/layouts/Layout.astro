---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="I'm a rising third year undergraduate in the University of Toronto, specialising in Computer Science with a minor in Philosophy." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="./favicon.png?" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html {
		background: #ffffff;
		color: #000000;
		font-family: "Helvetica Neue", system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
