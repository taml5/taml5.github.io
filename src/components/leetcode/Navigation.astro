---
const { prev, next } = Astro.props;
---

<nav class="pagination">
  {prev && (
    <a class="prev" href={`/leetcode/${prev.slug}/`}>
      ← {prev.data.number}. {prev.data.title}
    </a>
  )}
  {next && (
    <a class="next" href={`/leetcode/${next.slug}/`}>
      {next.data.number}. {next.data.title} →
    </a>
  )}
</nav>

<style>
  .pagination {
    display: flex;
    justify-content: space-between; /* pushes first item left, last item right */
    margin: 2rem 0;
    padding-top: 2rem;
    padding-right: 1rem;

    a {
      text-decoration: none;
      font-size: large;
      font-weight: medium;
      font-style: italic;
    }
  }

  .prev {
    margin-right: auto; /* pushes next to the right */
  }

  .next {
    margin-left: auto; /* ensures it goes right if prev is missing */
  }
</style>